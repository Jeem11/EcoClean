body {
    font-family: Arial, sans-serif;
    margin: 0;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    position: relative; /* Ensure body is positioned */
}

body::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("laundry.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.9;
    z-index: -2;
}

body::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(25, 25, 112, 0.7), rgba(10, 150, 255, 0.7), rgba(240, 255, 255, 0.7));
    z-index: -1;
    opacity: 0.7;
}

.left-side, .right-side {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
}

.center-side {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
    height: 100vh;
}

.side-image {
    width: 300px;
    height: 200px;
    margin-bottom: 20px;
    border-radius: 10px;
    object-fit: cover;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    position: relative; /* Ensure images are positioned */
}

.left-side .side-image:nth-child(1) {
    transform: translateX(-20px); /* Move first image to the left */
}

.left-side .side-image:nth-child(2) {
    transform: translateX(20px); /* Move second image to the right */
}

.left-side .side-image:nth-child(3) {
    transform: translateX(50px); /* Move third image to the right */
}

.right-side .side-image:nth-child(1) {
    transform: translateX(20px); /* Move first image to the left */
}

.right-side .side-image:nth-child(2) {
    transform: translateX(-20px); /* Move second image to the right */
}

.right-side .side-image:nth-child(3) {
    transform: translateX(-50px); /* Move third image to the right */
}

.container {
    background: linear-gradient(to bottom, rgba(65, 105, 225, 0.7), rgba(10, 150, 255, 0.7), rgba(240, 255, 255, 0.7));
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.logo-image {
    width: 200px;
    height: auto;
    margin-bottom: 5px;
}

h1 {
    font-size: 1.5em;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    margin-bottom: 20px;
}

button {
    background-color: #4169E1;
    color: white;
    padding: 15px 30px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-bottom: 20px;
	font-size: 20px;
}

button:hover {
    background-color: #1E90FF;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #4682B4;
    min-width: 160px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1;
    border-radius: 5px;
}

.dropdown-content a {
    color: white;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    border-radius: 5px;
}

.dropdown-content a:hover {
    background-color: #f1f1f1;
}

/* Show the dropdown menu on button click */
button:focus + .dropdown-content {
    display: block;
}

/* Responsive Design */
@media (max-width: 768px) {
    .side-image {
        width: 100px;
        height: 100px;
    }

    .container {
        padding: 15px;
    }

    h1 {
        font-size: 1.25rem;
    }

    .logo-image {
        width: 80px;
    }
}

@media (max-width: 480px) {
    .side-image {
        width: 80px;
        height: 80px;
    }

    .container {
        padding: 10px;
    }

    h1 {
        font-size: 1rem;
    }

    .logo-image {
        width: 60px;
    }
}
