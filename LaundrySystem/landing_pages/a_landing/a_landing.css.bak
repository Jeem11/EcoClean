.content {
    background: linear-gradient(to bottom, rgba(25, 25, 112, 0.7), rgba(10, 150, 255, 0.7), rgba(240, 255, 255, 0.7));
    z-index: -1;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
    width: 90%;
    max-width: 1000px;
    margin-top: 180px; /* Adjusted margin-top for spacing */
    z-index: 1;
    position: relative;
}

.content h1 {
    margin-bottom: 20px;
    color: white;
    font-size: 2rem;
}

table {
    width: 100%;
    border-collapse: collapse;
}

thead {
    background-color: rgb(135, 206, 235);
}

th, td {
    padding: 10px;
    border: 1px solid #ddd;
    text-align: left;
}

th {
    background-color: rgb(65, 105, 225);
    color: white;
    font-size: 1.1rem;
}

td {
    color: black;
}

tbody tr:nth-child(even) {
    background-color: rgba(173, 216, 230, 0.5);
}

/* Responsive Design */
@media (max-width: 768px) {
    .content {
        width: 80%;
        padding: 15px;
    }

    .content h1 {
        font-size: 1.5rem;
    }

    th, td {
        padding: 8px;
        font-size: 0.9rem;
    }
}

@media (max-width: 480px) {
    .content {
        width: 90%;
        padding: 10px;
    }

    .content h1 {
        font-size: 1.2rem;
    }

    th, td {
        padding: 5px;
        font-size: 0.8rem;
    }
}

/* Style for dropdown button and content */
.dropdown {
    position: relative;
    display: inline-block;
    margin-right: 10px;
}

.dropdown-btn {
    background-color: #87CEEB;
    color: #0077b6;
    padding: 12px 18px;
    font-size: 17px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    display: inline-block;
}

.dropdown-btn:hover {
    background-color: rgb(65, 105, 225);
    color: black;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #87CEEB;
    box-shadow: 0px 8px 10px 0px rgba(0, 0, 0, 0.2);
    z-index: 1;
    padding: 10px;
}

.status-dropdown {
    background-color: #87CEEB;
    border: none;
    padding: 10px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
}

.status-dropdown option {
    padding: 10px;
}

.status-dropdown:hover {
    background-color: babyblue;
}
