body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

header {
    background-color: #333;
    color: white;
    padding: 1rem;
    text-align: center;
}

main {
    padding: 2rem;
}

h2 {
    margin-bottom: 1rem;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
}

th, td {
    border: 1px solid #000;
    padding: 0.5rem;
    text-align: center;
    background-color: #000; /* Black background for table cells */
    color: white; /* White text color */
}

button {
    margin: 0.2rem;
    padding: 0.5rem 1rem;
    border: none;
    cursor: pointer;
}

button.waiting {
    background-color: #f0ad4e;
}

button.under-wash {
    background-color: #5bc0de;
}

button.drying {
    background-color: #0275d8;
    color: white;
}

button.folding {
    background-color: #5cb85c;
    color: white;
}

button.ready {
    background-color: #5bc0de;
    color: white;
}
